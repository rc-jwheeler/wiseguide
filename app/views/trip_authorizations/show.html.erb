<%= render 'shared/breadcrumbs', :target => @trip_authorization, :name => 'Trip Authorization' %>
<%= link_to "Delete", trip_authorization_path(@trip_authorization), :method => "delete", data: {confirm: "Are you sure you want to delete this trip authorization?"}, :class => "delete" if can?(:delete, @trip_authorization) %>

<p>
  <b>Allowed trip per month:</b>
  <%= @trip_authorization.allowed_trips_per_month %>
</p>

<p>
  <b>End date:</b>
  <%= @trip_authorization.end_date.strftime "%Y-%m-%d" unless @trip_authorization.end_date.blank? %>
</p>

<% if @trip_authorization.disposition_date.blank? && can?(:complete_disposition, @trip_authorization) %>
  <p>
    <%= link_to "Complete Disposition", complete_disposition_trip_authorization_path(@trip_authorization), :method=>:put %>
  </p>
<% end %>

<p>
  <b>Disposition date:</b>
  <%= @trip_authorization.disposition_date.strftime "%Y-%m-%d" unless @trip_authorization.disposition_date.blank? %>
</p>

<p>
  <b>Disposition user:</b>
  <%= @trip_authorization.disposition_user.display_name unless @trip_authorization.disposition_user.blank? %>
</p>

<p><%= creation_stamp @trip_authorization %></p>
<p><%= last_updated @trip_authorization %></p>
