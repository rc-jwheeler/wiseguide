<div id="page-header">
  <h1><%= @customer.name %></h1>
</div>

<%= form_for @customer, :html => { :multipart => true }  do |f| %>
  <fieldset>
    <ol class="section first">
      <%= render 'form', :f => f %>
      <li>
      <%= last_updated @customer %>
      </li>
    </ol>
    <ol class="section second" id="impairments">
      <li>
      <%= render "impairments", :form => f %>
      </li>
    </ol>
    <ol class="section third" id="network">
      <li>
      <%= render "network" %>
      </li>
    </ol>
    <ol class="section second notes" id="notes_and_photo">
      <li>
      <%= render "notes_and_photo", :f => f %>
      </li>
    </ol>
    <ol class="section third" id="kases">
      <li>
      <%= render "kases" %>
      </li>
    </ol>
    
    <div class="actions">
      <%= f.submit "Save" %>
    </div>
    
  </fieldset>
<% end %>
