<h1>Support Network</h1>
<%= link_to "Add", new_customer_support_network_member_path(customer_id: @customer.id), class: :add %>

<table>
  <tbody>
    <% for member in @customer.customer_support_network_members %>
      <tr class="auto-zebra">
        <td>
          <%= member.name %>
        </td>
        <td>
          <%= member.title %><br>
          <%= member.organization %><br>
          <%= member.phone_number %><br>
          <%= link_to member.email, "mailto:%s" % member.email %>
        </td>
        <td>
          <%= link_to( "", edit_customer_support_network_member_path(member), class: "edit") if can? :edit, @customer %>
        </td>
        <% if can? :edit, member %>
          <td>
            <%= link_to "", member, class: "delete", method: :delete, data: {confirm: "Are you sure?"} %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
