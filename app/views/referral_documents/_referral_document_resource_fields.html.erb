<p class="fields">
  <%= f.label :resource_id, "Add resource" %><br>
  <%= f.collection_select(:resource_id, @resources, :id, :name, {:prompt => '<Select Resource>'}) %><br>
  <%= f.label :note, "Resource note" %><br>
  <%= f.text_area :note, :rows => 3 %><br>
  <%= f.hidden_field :_destroy %>
  <%= link_to_function "Remove resource", "remove_fields(this)" %>
</p>
<hr>